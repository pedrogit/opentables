{
  "name": "opentables",
  "version": "1.0.0",
  "description": "Restful server of configurable and formattable tables",
  "main": "server/index.js",
  "scripts": {
    "test-common": "nodemon  --inspect --exec \"mocha client/src/common/test/testUtils.js client/src/common/test/testFilter.js server/test/testSchemaValidator.js client/src/common/test/testComponentParser.js client/src/common/test/testTemplateParser.js --timeout 0\"",
    "test-server": "nodemon  --inspect --exec \"mocha server/test/testRoutes.js server/test/testPermissions.js --timeout 0\"",
    "test-routes": "nodemon --inspect --exec \"mocha server/test/testRoutes.js --timeout 0\"",
    "start-server": "node server/index.js",
    "debug-server": "nodemon --nolazy --inspect --watch client/common --watch server server/index.js",
    "build-client": "webpack --mode production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedrogit/opentables.git"
  },
  "keywords": [
    "restful",
    "tables",
    "database"
  ],
  "author": "Pierre Racine",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/pedrogit/opentables/issues"
  },
  "homepage": "https://github.com/pedrogit/opentables#readme",
  "dependencies": {
    "ajv": "^8.7.1",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.1.0",
    "serve": "^12.0.1",
    "set-cookie-parser": "^2.4.8"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "csvtojson": "^2.0.10",
    "mocha": "^9.0.2",
    "nodemon": "^2.0.10"
  }
}
